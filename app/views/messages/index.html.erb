<h1>メッセージ一覧</h1>
<%= link_to "投稿画面へ", new_message_path, style: "text-decoration: none;" %>
<% @messages.each do |message| %>
<p>
<%= message.title %>
<%= link_to "詳細", message_path(message), style: "text-decoration: none;" %>
<%= link_to "編集", edit_message_path(message), style: "text-decoration: none;" %>
<%= link_to "削除", message_path(message), method: :delete, data: {confirm:"削除しますか?"}, style: "text-decoration: none;" %>
</p>
<% end %>