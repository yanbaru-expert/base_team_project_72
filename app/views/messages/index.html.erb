<h1>メッセージ一覧</h1>
<%= link_to "投稿画面へ", new_message_path, class: "link_style" %>
<% @messages.each do |message| %>
  <p>
    <%= message.title %>
    <%= link_to "詳細", message_path(message), class: "link_style" %>
    <%= link_to "編集", edit_message_path(message), class: "link_style" %>
    <%= link_to "削除", message_path(message), method: :delete, data: {confirm:"削除しますか?"}, class: "link_style" %>
  </p>
<% end %>